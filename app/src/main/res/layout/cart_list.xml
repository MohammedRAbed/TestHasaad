<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="16dp"
                android:paddingRight="24dp"
                android:paddingLeft="24dp" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp" app:srcCompat="@drawable/img_for_list"
                    android:id="@+id/image_cart" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="14dp" app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="Michelin Corn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/name_cart"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@+id/image_cart" android:textSize="15sp"
                    android:textColor="@color/Black"/>
            <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/many_x_items_cart"
                    android:textColor="@color/darkGreen"
                    android:textSize="13sp" android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/name_cart"
                    app:layout_constraintStart_toEndOf="@+id/image_cart" android:layout_marginStart="12dp"/>
            <TextView
                    android:text=" items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/type_cart"
                    app:layout_constraintStart_toEndOf="@+id/many_x_items_cart"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/name_cart" android:textSize="13sp"/>
            <TextView
                    android:text="no extra description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/description_cart"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/type_cart" android:layout_marginStart="37dp"
                    app:layout_constraintTop_toBottomOf="@+id/name_cart" android:layout_marginTop="6dp"/>
            <TextView
                    android:text="29.5 SR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/price_cart"
                    app:layout_constraintTop_toBottomOf="@+id/type_cart"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/image_cart"
                    android:layout_marginStart="12dp" android:textSize="15sp" android:textColor="@color/darkGreen"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
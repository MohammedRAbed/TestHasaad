<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/a">
<android.support.constraint.ConstraintLayout
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/a">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/for_settings" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout2" android:paddingTop="60dp" android:paddingBottom="75dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:id="@+id/textView144"
                  android:text="Cart"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:layout_width="16dp"
                android:layout_height="16dp" android:id="@+id/back_from_cart_to_home"
                android:background="@drawable/left_back"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/for_home_categories"
            android:layout_marginTop="132dp" app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp" android:layout_marginStart="10dp"
            android:id="@+id/constraintLayout3">

        <TextView
                android:text="Subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView59" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="23dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp" android:textSize="17sp" android:textColor="@color/Black"/>
        <TextView
                android:text="Coupon "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView60" android:textColor="@color/Black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="23dp"
                android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/textView62"/>
        <TextView
                android:text="Extra note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView61" android:textColor="@color/Black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="23dp"
                android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/textView63"/>
        <TextView
                android:text="Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView622" android:textColor="@color/Black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="23dp"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView64"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"/>

        <TextView
                android:text="50SR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView62"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp" android:textSize="17sp" android:textColor="@color/grayText"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="23dp"/>
        <TextView
                android:text="Add code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView63" android:textColor="@color/darkGreen"
                android:textSize="17sp"
                android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/textView62"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="23dp"/>
        <TextView
                android:text="Add code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView64" android:textColor="@color/darkGreen"
                android:textSize="17sp"
                android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/textView63"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="23dp"/>
        <TextView
                android:text="52.5 SR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView65" android:textColor="@color/darkGreen"
                android:textSize="20sp"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView64"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="23dp" android:textStyle="bold"
                android:layout_marginBottom="15dp" app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_for_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/for_home_categories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"></android.support.v7.widget.RecyclerView>

    <TextView
            android:id="@+id/check_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkGreen"
            android:gravity="center|center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="Check Out  (25 SR)"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_for_cart" />
</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
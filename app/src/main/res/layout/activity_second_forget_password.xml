<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/welcome_sign_in">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/l_s_fp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            <Button
                    android:layout_width="16.03dp"
                    android:layout_height="16.03dp" android:id="@+id/button" android:background="@drawable/left_back"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Forget Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="18sp"
                    android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="normal" app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>
        <TextView
                android:text="New Password!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textStyle="bold"
                android:textColor="@color/white" android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/l_s_fp" android:layout_marginTop="39dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"/>
        <TextView
                android:text="Type verification code and new password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:ignore="MissingConstraints" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="18dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="31dp"/>


    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/nearWhite">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/main_back_for_second_screen"
                android:id="@+id/imageView11" android:scaleType="fitXY"/>
        <TextView
                android:text="Verification code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView21" android:textColor="@color/darkGreen"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="62dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp" android:layout_marginRight="30dp" android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView21" android:layout_marginTop="3dp"
                android:id="@+id/linearLayout">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText7" android:layout_weight="1"
                    android:background="@drawable/verify_account_edittext"
                    android:hint="____" android:textColorHint="@color/editGray"
                    android:gravity="center"
                    android:layout_marginRight="3dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText6" android:layout_weight="1"
                    android:background="@drawable/verify_account_edittext"
                    android:hint="____" android:textColorHint="@color/editGray"
                    android:gravity="center" android:layout_marginRight="3dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText2" android:layout_weight="1"
                    android:background="@drawable/verify_account_edittext"
                    android:hint="____" android:textColorHint="@color/editGray" android:gravity="center"
                    android:layout_marginRight="3dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText5" android:layout_weight="1"
                    android:background="@drawable/verify_account_edittext"
                    android:hint="____" android:gravity="center" android:textColorHint="@color/editGray"/>
        </LinearLayout>
        <TextView
                android:text="New Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView11" android:textSize="12sp"
                android:textColor="@color/textGray"
                tools:layout_editor_absoluteX="53dp"
                tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:layout_marginTop="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText4"
                android:background="@drawable/for_sign_up"
                android:paddingLeft="21dp"
                android:hint="Enter your password" android:textSize="15sp" android:textColorHint="@color/editGray"
                tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp" android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
                android:paddingTop="17dp" android:paddingBottom="17dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
        <TextView
                android:text="Confirm Password"
                android:layout_width="wrap_content"
                android:layout_height="0dp" android:id="@+id/textView16"
                android:textColor="@color/textGray"
                android:textSize="12sp" tools:layout_editor_absoluteX="53dp"
                tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/editText4"
                android:layout_marginTop="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword"
                android:ems="10"
                android:id="@+id/editText"
                android:background="@drawable/for_sign_up"
                tools:ignore="MissingConstraints" android:hint="Confirm your Password"
                android:textColorHint="@color/editGray"
                android:paddingTop="15dp" android:paddingBottom="15dp" android:paddingLeft="21dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp" android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView16" android:layout_marginTop="3dp"/>
        <Button
                android:text="Confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/to_get_start2"
                android:background="@drawable/for_buttons"
                tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
                android:textColor="@color/white"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="90dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                android:textAllCaps="false"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
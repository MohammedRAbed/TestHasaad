<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:id="@+id/d_cart"
        xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
>
<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdToCartDialog"
        >



    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/con"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/half" android:layout_marginEnd="11dp" android:layout_marginStart="11dp"
            android:layout_marginTop="15dp">
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="167dp"
                android:layout_height="167dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/main_ananass"
                android:layout_marginTop="110dp"
                app:civ_circle_background_color="@color/white"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintTop_toBottomOf="@+id/con"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginEnd="11dp"
                                                 android:layout_marginStart="11dp"
                                                 android:background="@drawable/s_half">
        <TextView
                android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView45" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="43dp" android:layout_marginStart="22dp" android:textColor="@color/Black"
                app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:inputType="number"
                android:textColorHint="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1"
                android:ems="10"
                android:id="@+id/et_many"
                android:background="@drawable/for_sign_up"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="22dp"
                app:layout_constraintTop_toBottomOf="@+id/textView45"
                android:layout_marginTop="9dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="22dp"
                app:layout_constraintHorizontal_bias="0.5"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textStyle="bold"/>
        <TextView
                android:text="Other Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView72" android:textColor="@color/Black"
                android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="22dp" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/et_many"/>
        <EditText
                android:hint="I'm want to add extra .."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/et_des" android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="22dp" android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/textView72" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="22dp" app:layout_constraintHorizontal_bias="0.5" android:paddingLeft="16dp"
                android:paddingTop="18dp" android:paddingBottom="73dp" android:textColorHint="@color/grayText"
                android:textSize="16sp"/>
        <Button
                android:text="Confirm (SR)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_add_cart"
                android:background="@drawable/for_buttons"
                android:layout_marginTop="34dp"
                app:layout_constraintTop_toBottomOf="@+id/et_des"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="33dp"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="22dp" android:layout_marginEnd="22dp"
                app:layout_constraintHorizontal_bias="0.5" android:textColor="@color/white"/>
    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_x_dismiss"
            android:id="@+id/x_dismiss"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>
</ScrollView>
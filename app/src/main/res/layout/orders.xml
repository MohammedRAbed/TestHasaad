<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/for_settings">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/l_or"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="25sp"
                      android:text="My Orders"
                      android:textColor="@color/white"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="20dp" android:textStyle="bold"
                      android:id="@+id/textView44"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                    android:layout_height="20dp"
                    android:id="@+id/button11"
                    android:layout_width="47dp"
                    android:layout_marginEnd="17dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/darkGreen"
                    android:text="Filter"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="12sp" app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_filter"
                    android:id="@+id/imageView14"
                    app:layout_constraintEnd_toStartOf="@+id/button11"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView52"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/l_or"
                android:textSize="15sp" android:textColor="@color/white"/>
        <TextView
                android:text=" orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView53" android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/textView52"
                android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/l_or"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="42dp"/>


    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView_for_orders"
            android:background="@color/a"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/a">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@drawable/for_home_categories">

            <ImageView
                    android:layout_width="113dp"
                    android:layout_height="121dp" app:srcCompat="@drawable/img_for_list"
                    android:id="@+id/image_related" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="9dp"
                    android:layout_marginStart="9dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="9dp"/>
            <TextView
                    android:text="Fresh Anab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/name_related"
                    android:textSize="16sp"
                    android:textColor="@color/Black" android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/image_related" android:layout_marginStart="9dp"
                    android:layout_marginTop="18dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Fish Food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/type_related"
                    app:layout_constraintStart_toEndOf="@+id/image_related" android:layout_marginStart="9dp"
                    android:textColor="@color/Black" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/name_related"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_icon_star"
                    android:id="@+id/star1"
                    android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/image_related"
                    android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/type_related"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_icon_star"
                    android:id="@+id/star2"
                    app:layout_constraintStart_toEndOf="@+id/image_related"
                    android:layout_marginStart="28dp" android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/type_related"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_icon_star"
                    android:id="@+id/star3"
                    app:layout_constraintStart_toEndOf="@+id/image_related"
                    android:layout_marginStart="44dp" android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/type_related"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_icon_star"
                    android:id="@+id/star4"
                    app:layout_constraintStart_toEndOf="@+id/image_related"
                    android:layout_marginStart="60dp" android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/type_related"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_icon_star"
                    android:id="@+id/star5"
                    app:layout_constraintStart_toEndOf="@+id/image_related"
                    android:layout_marginStart="76dp" android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/type_related"/>
            <TextView
                    android:text=" SR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView51"
                    android:textColor="@color/darkGreen" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="14dp"
                    android:textStyle="bold" android:layout_marginTop="75dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="25.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/price_related"
                    android:textColor="@color/darkGreen"
                    app:layout_constraintEnd_toStartOf="@+id/textView51"
                    android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="75dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_green_favourites"
                    android:id="@+id/imageView18"
                    app:layout_constraintStart_toEndOf="@+id/image_related" android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/star2"/>
            <TextView
                    android:text="Remove"
                    android:layout_width="41dp"
                    android:layout_height="15dp"
                    android:id="@+id/button17"
                    android:textAllCaps="false" android:background="@color/white" android:textColor="@color/darkGreen"
                    android:textSize="11sp" app:layout_constraintStart_toEndOf="@+id/imageView18"
                    android:layout_marginStart="4dp" android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/star3"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_to_cart"
                    android:id="@+id/imageView19"
                    app:layout_constraintEnd_toStartOf="@+id/button19" android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/price_related"/>
            <TextView
                    android:textAllCaps="false"
                    android:text=" Add to cart"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:id="@+id/button19"
                    android:textSize="11sp"
                    android:textColor="@color/darkGreen"
                    android:background="@color/white" android:layout_marginTop="17dp"
                    app:layout_constraintTop_toBottomOf="@+id/price_related" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
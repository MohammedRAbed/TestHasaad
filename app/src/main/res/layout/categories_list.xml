<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/category"
>


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/a">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:background="@drawable/for_home_categories"
                                                     android:layout_marginRight="10dp"
                                                     android:layout_marginLeft="10dp"
                                                     android:layout_marginTop="14dp">


            <ImageView
                    android:layout_width="115dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/img_for_list"
                    android:id="@+id/first_categories_list_img"
                    android:layout_weight="1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="17dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/img_for_list"
                    android:id="@+id/second_categories_list_img"
                    app:layout_constraintStart_toEndOf="@+id/first_categories_list_img" android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="17dp"/>
            <TextView
                    android:text="Fish Foods"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/type_food"
                    android:textColor="@color/darkGreen" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    app:layout_constraintTop_toBottomOf="@+id/first_categories_list_img"
                    android:layout_marginTop="11dp"/>
            <TextView
                    android:text="Starts from "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_from" android:textSize="13sp"
                    android:textColor="@color/grayText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/type_food"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="15 SR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/no_sr" android:textSize="13sp"
                    android:textColor="@color/darkGreen"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/type_food"
                    app:layout_constraintStart_toEndOf="@+id/start_from"/>
            <TextView
                    android:text="more than "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/more" android:textSize="13sp"
                    android:textColor="@color/Black"
                    app:layout_constraintStart_toEndOf="@+id/second_categories_list_img"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp" android:layout_marginTop="64dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="200 items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/no_items"
                    android:textColor="@color/darkGreen" android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/second_categories_list_img"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/more" android:paddingRight="20dp"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true" android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/main_back_for_second_screen"
                android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="55dp"
                android:scaleType="fitXY" tools:ignore="MissingConstraints"/>
        <ImageView
                android:layout_width="149.71dp"
                android:layout_height="139.63dp" app:srcCompat="@drawable/main_basket" android:id="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="120dp"/>
        <TextView
                android:text="Find food you love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="66dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" android:textColor="@color/darkGreen"
                android:textStyle="bold"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="2dp" app:srcCompat="@drawable/slach" android:id="@+id/imageView4"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="11dp"/>
        <TextView
                android:text="Discover the best menus from over 100 cuisins and restaruants."
                android:layout_width="280dp"
                android:layout_height="wrap_content" android:id="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="18dp" android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginTop="54dp"/>
        <Button
                android:text="SIGN IN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sign_in"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                android:layout_marginTop="311dp"
                android:background="@drawable/for_buttons"
                android:textColor="@color/white"
                android:textSize="17dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="22dp"/>


    </android.support.constraint.ConstraintLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"
            android:background="@color/lightGray"
    >
        <Button
                android:text="SIGN UP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sign_up"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/for_sign_up" android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp" android:textColor="@color/darkGreen"/>
        <TextView
                android:text="Skip for now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skip" android:textColor="@color/Black"
                android:layout_marginTop="20dp" android:layout_marginBottom="33dp"/>
    </LinearLayout>


</LinearLayout>

</ScrollView>
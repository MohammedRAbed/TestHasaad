<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/welcome_sign_in">


        <android.support.constraint.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/l_s_signup"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <Button
                    android:layout_width="16.03dp"
                    android:layout_height="16.03dp" android:id="@+id/back_from_2_to_1"
                    android:background="@drawable/left_back"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="SIGN UP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="18sp"
                    android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="normal" app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>
        <TextView
                android:text="Welcome!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textStyle="bold"
                android:textColor="@color/white" android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/l_s_signup" android:layout_marginTop="39dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"/>
        <TextView
                android:text="Your Location &amp; Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:ignore="MissingConstraints" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="18dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="31dp"/>
        <ImageView
                android:layout_width="53dp"
                android:layout_height="10dp" app:srcCompat="@drawable/dot_signup2"
                android:id="@+id/imageView9"
                android:layout_marginTop="52dp"
                app:layout_constraintTop_toBottomOf="@+id/l_s_signup"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"/>


    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/nearWhite">

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   app:srcCompat="@drawable/main_back_for_sign_in" android:scaleType="fitXY"
                   android:id="@+id/imageView6" app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:text="Country"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="53dp"
                android:layout_marginStart="53dp" android:textSize="12sp" android:textColor="@color/textGray"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="35dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:ems="10"
                android:id="@+id/editText3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                android:layout_marginTop="3dp"
                android:hint="Select your Country"
                android:background="@drawable/for_sign_up" android:textColorHint="@color/editGray"
                android:autoText="false" android:freezesText="false" android:textAllCaps="false"
                android:paddingLeft="21dp" android:textSize="15sp" android:paddingTop="17dp"
                android:paddingBottom="17dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"/>
        <TextView
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView11" android:textSize="12sp"
                android:textColor="@color/textGray"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/editText3" tools:ignore="MissingConstraints"
                android:layout_marginStart="53dp" app:layout_constraintStart_toStartOf="@+id/imageView6"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:ems="10"
                android:id="@+id/editText4"
                android:background="@drawable/for_sign_up"
                android:paddingLeft="21dp"
                android:hint="Select your City" android:textSize="15sp" android:textColorHint="@color/editGray"
                tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="30dp" android:layout_marginStart="30dp"
                android:paddingTop="17dp" android:paddingBottom="17dp" android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11"/>
        <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView16"
                android:textColor="@color/textGray"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/editText4" android:layout_marginTop="20dp"
                tools:ignore="MissingConstraints" android:layout_marginStart="53dp"
                app:layout_constraintStart_toStartOf="@+id/imageView6"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword"
                android:ems="10"
                android:id="@+id/editText"
                android:background="@drawable/for_sign_up"
                tools:ignore="MissingConstraints" android:hint="Enter your Password"
                android:textColorHint="@color/editGray"
                android:paddingTop="15dp" android:paddingBottom="15dp" android:paddingLeft="21dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp" android:textSize="15sp"/>
        <Button
                android:text="Next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/to_signup3"
                android:background="@drawable/for_buttons"
                tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:paddingTop="16.5dp"
                android:paddingBottom="16.5dp" android:textColor="@color/white" android:textSize="16sp"
                android:layout_marginTop="93dp" app:layout_constraintTop_toBottomOf="@+id/editText"/>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
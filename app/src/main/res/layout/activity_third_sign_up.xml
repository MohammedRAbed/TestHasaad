<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/welcome_sign_in">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/l_t_signup"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <Button
                    android:layout_width="16.03dp"
                    android:layout_height="16.03dp" android:id="@+id/back_from3_to_2"
                    android:background="@drawable/left_back"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp" app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                    android:text="SIGN UP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="18sp"
                    android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="normal" app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>


        <TextView
                android:text="Welcome!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textStyle="bold"
                android:textColor="@color/white" android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/l_t_signup" android:layout_marginTop="39dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"/>
        <TextView
                android:text="Verify Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:ignore="MissingConstraints" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="18dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="31dp"/>
        <ImageView
                android:layout_width="53dp"
                android:layout_height="10dp" app:srcCompat="@drawable/dot_signup3"
                android:id="@+id/imageView9"
                android:layout_marginTop="52dp"
                app:layout_constraintTop_toBottomOf="@+id/l_t_signup"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"/>


    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/nearWhite">

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   app:srcCompat="@drawable/main_back_for_sign_in" android:scaleType="fitXY"
                   android:id="@+id/imageView6" app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Verify your mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/darkGreen" android:textSize="30sp" android:layout_marginTop="41dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Enter your OTP code here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView20" android:textColor="@color/Black"
                android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView19"
                android:layout_marginTop="13dp"/>
        <TextView
                android:text="Verification code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView21" android:textColor="@color/darkGreen"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp" android:layout_marginTop="55dp"
                app:layout_constraintTop_toBottomOf="@+id/textView20"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp" android:layout_marginRight="30dp" android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView21" android:layout_marginTop="3dp"
                android:id="@+id/linearLayout">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText7" android:layout_weight="1"
                    android:background="@drawable/verify_account_edittext"
                    android:hint="____" android:textColorHint="@color/editGray"
                    android:gravity="center"
                    android:layout_marginRight="3dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText6" android:layout_weight="1"
                    android:background="@drawable/verify_account_edittext"
                    android:hint="____" android:textColorHint="@color/editGray"
                    android:gravity="center" android:layout_marginRight="3dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText2" android:layout_weight="1"
                    android:background="@drawable/verify_account_edittext"
                    android:hint="____" android:textColorHint="@color/editGray" android:gravity="center"
                    android:layout_marginRight="3dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText5" android:layout_weight="1"
                    android:background="@drawable/verify_account_edittext"
                    android:hint="____" android:gravity="center" android:textColorHint="@color/editGray"/>
        </LinearLayout>
        <TextView
                android:text="Don't recieve code? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView24"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="95dp"
                android:layout_marginStart="95dp" android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="69dp"
                android:textColor="@color/Black"/>
        <TextView
                android:text="resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView25" android:textColor="@color/darkGreen"
                android:textSize="15sp"
                tools:ignore="MissingConstraints" app:layout_constraintStart_toEndOf="@+id/textView24"
                android:layout_marginTop="69dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
        <Button
                android:text="Finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/to_finish_signup"
                android:background="@drawable/for_buttons"
                tools:ignore="MissingConstraints"
                android:textSize="17sp" android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" android:paddingTop="17dp" android:paddingBottom="17dp"
                android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textView24"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
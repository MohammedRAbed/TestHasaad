<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/a">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/for_home_categories">

            <TextView
                    android:text="Order "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView50"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="20dp" android:textStyle="bold" android:textColor="@color/Black"/>
            <TextView
                    android:text="#456123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/code_order" android:textColor="@color/Black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textView50"
                    android:layout_marginTop="18dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="On itâ€™s way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/condition_order" android:textSize="12sp"
                    android:textColor="@color/yellow"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView50" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>
            <TextView
                    android:text=" SR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView56"
                    android:textColor="@color/darkGreen"
                    android:textStyle="bold" android:layout_marginEnd="56dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="18dp"/>
            <TextView
                    android:text="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/price_order"
                    android:textColor="@color/darkGreen" android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/textView56" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="18dp"/>
            <TextView
                    android:text="July 24, 2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/date_order" android:textColor="@color/Black"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/price_order" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_go_to_profile"
                    android:id="@+id/imageView15"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="39dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>